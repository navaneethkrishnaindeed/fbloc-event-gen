{
  "name": "fbloc-event-gen",
  "displayName": "Fbloc Event Gen",
  "description": "Generate All state, event and even bloc code from a SINGLE VARIABLE",
  "version": "0.0.7",
  "publisher": "NavaneethKrishna",
  "icon": "media/logo.webp",
  "repository": {
    "type": "git",
    "url": "https://github.com/navaneethkrishnaindeed/fbloc-event-gen.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "extension.generateBlocFiles",
          "when": "explorerResourceIsFolder",
          "group": "customGroup"
        },
        {
          "command": "extension.generateClass",
          "when": "explorerResourceIsFolder",
          "group": "customGroup"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.generateBlocFiles",
        "title": "üìù‚ö° Generate Bloc Files (fbloc_event_gen)"
      },
      {
        "command": "extension.generateClass",
        "title": " üèóÔ∏èüë®‚Äçüíª Generate Dart Models From JSON"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  }
}
